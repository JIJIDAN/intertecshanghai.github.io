<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <title>客户信息管理系统</title>
    <style>
        .required::after {
            content: "*";
            color: red;
            margin-left: 3px;
        }
        #adminPanel {
            display: none;
            margin-top: 2rem;
            padding: 1rem;
            border: 1px solid #ccc;
        }
        .form-group {
            margin: 10px 0;
        }
        input[type="text"], 
        input[type="tel"] {
            padding: 5px;
            width: 300px;
        }
    </style>
</head>
<body>
    <h2>客户信息登记表</h2>
    <form id="customerForm">
        <div class="form-group">
            <label class="required">客户姓名</label>
            <input type="text" name="name" required 
                   placeholder="请输入真实姓名">
        </div>

        <div class="form-group">
            <label class="required">手机号码</label>
            <input type="tel" name="phone" 
                   pattern="^1[3-9]\d{9}$" 
                   title="请输入11位有效手机号"
                   maxlength="11"
                   required
                   oninput="this.value = this.value.replace(/\D/g, '')"
                   placeholder="13812345678">
        </div>

        <div class="form-group">
            <label class="required">所属公司</label>
            <input type="text" name="company" required
                   placeholder="公司全称">
        </div>

        <button type="submit">提交信息</button>
    </form>

    <div id="adminPanel">
        <h3>管理员操作</h3>
        <input type="password" id="adminKey" placeholder="输入管理密码">
        <button onclick="exportData()">导出数据</button>
        <button onclick="clearStorage()">清空数据</button>
    </div>

    <script>
        // 初始化本地存储
        if (!localStorage.getItem('customerData')) {
            localStorage.setItem('customerData', JSON.stringify([]));
        }

        // 表单提交处理
        document.getElementById('customerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const customer = {
                name: formData.get('name'),
                phone: formData.get('phone'),
                company: formData.get('company'),
                timestamp: new Date().toISOString()
            };

            // 数据验证
            if (!/^1[3-9]\d{9}$/.test(customer.phone)) {
                alert('请输入有效的手机号码');
                return;
            }

            // 保存数据
            const allData = JSON.parse(localStorage.getItem('customerData'));
            allData.push(customer);
            localStorage.setItem('customerData', JSON.stringify(allData));

            alert('信息提交成功！');
            this.reset();
        });

        // 导出数据功能
        function exportData() {
            const password = document.getElementById('adminKey').value;
            if (password !== 'admin123') {
                alert('密码错误');
                return;
            }

            const data = JSON.parse(localStorage.getItem('customerData'));
            if (data.length === 0) {
                alert('暂无数据可导出');
                return;
            }

            // 生成CSV内容
            const csvRows = [
                ['姓名', '手机号', '公司名称', '提交时间'].join(','),
                ...data.map(item => [
                    item.name,
                    item.phone,
                    item.company,
                    new Date(item.timestamp).toLocaleString()
                ].join(','))
            ];

            const csvString = csvRows.join('\n');
            const blob = new Blob([csvString], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = `客户数据_${new Date().toLocaleDateString()}.csv`;
            a.click();
            window.URL.revokeObjectURL(url);
        }

        // 清空存储
        function clearStorage() {
            const password = document.getElementById('adminKey').value;
            if (password === 'ljhleege123') {
                localStorage.removeItem('customerData');
                alert('数据已清空');
                location.reload();
            } else {
                alert('密码错误');
            }
        }

        // 开发人员调试（在控制台输入showAdmin()激活）
        window.showAdmin = () => document.getElementById('adminPanel').style.display = 'block';
    </script>
</body>
</html>
